<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="col-md-12 card-header mb-2">
                    <div class="row">
                        <div class="col-md-11">
                            <h5>Welcome {{ user.firstname }} {{ user.surname }}</h5>
                        </div>
                        <div class="col-md-1">
                            <a href="/logout" style="width: 100%;" class="btn btn-danger"><i class="fas fa-power-off"></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-header">
                    <h6>Create New User</h6>
                </div>
                <div class="card-body">
                    <form action="/users/create-user/" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Name</label>
                                    <input required type="text" name="firstname" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Last Name</label>
                                    <input required type="text" name="surname" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label for="">Username</label>
                                    <input required type="text" name="username" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label for="">Password</label>
                                    <input required type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Mail</label>
                                    <input required type="mail" name="mail" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-10 mt-5">
                                <a href="/users/" class="btn btn-danger"><i class="fas fa-times"></i> Cancel</a>
                            </div>
                            <div class="col-md-2 mt-5 text-right">
                                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Create User</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>