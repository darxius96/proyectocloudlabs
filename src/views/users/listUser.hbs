<div class="container p-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card p-3">
                <div class="row">
                    <div class="col-md-12 card-header mb-2">
                        <div class="row">
                            <div class="col-md-11">
                                <h5>Welcome {{ user.firstname }} {{ user.surname }}</h5>
                            </div>
                            <div class="col-md-1">
                                <a href="/logout" style="width: 100%;" class="btn btn-danger"><i class="fas fa-power-off"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h5>List of Users</h5>
                    </div>
                    <div class="col-md-3">
                        <a href="/users/new-user/" style="width: 100%; font-weight: bold;" class="btn btn-primary font-weight-bold"><i class="fas fa-user-plus"></i> New User</a>
                    </div>
                    <div class="col-md-12 mt-4">
                        <table class="table table-bordered">
                            <thead class="thead-dark text-white" style="background: #2471A3;">
                                <tr>
                                    <th class="text-center">First Name</th>
                                    <th class="text-center">Last Name</th>
                                    <th class="text-center">Mail</th>
                                    <th class="text-center">Username</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users }}
                                    <tr>
                                        <td>{{ firstname }}</td>
                                        <td>{{ surname }}</td>
                                        <td>{{ username }}</td>
                                        <td>{{ mail }}</td>
                                        <td class="text-center">
                                            <a title="detail user" href="/users/detail-user/{{_id}}" class="btn btn-outline-success"><i class="fas fa-tasks"></i></a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>